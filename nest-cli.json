{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/microservices/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/microservices/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/microservices",
  "projects": {
    "microservices": {
      "type": "application",
      "root": "apps/microservices",
      "entryFile": "main",
      "sourceRoot": "apps/microservices/src",
      "compilerOptions": {
        "tsConfigPath": "apps/microservices/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "profile": {
      "type": "application",
      "root": "apps/profile",
      "entryFile": "main",
      "sourceRoot": "apps/profile/src",
      "compilerOptions": {
        "tsConfigPath": "apps/profile/tsconfig.app.json"
      }
    },
    "films": {
      "type": "application",
      "root": "apps/films",
      "entryFile": "main",
      "sourceRoot": "apps/films/src",
      "compilerOptions": {
        "tsConfigPath": "apps/films/tsconfig.app.json"
      }
    },
    "persons": {
      "type": "application",
      "root": "apps/persons",
      "entryFile": "main",
      "sourceRoot": "apps/persons/src",
      "compilerOptions": {
        "tsConfigPath": "apps/persons/tsconfig.app.json"
      }
    },
    "genres": {
      "type": "application",
      "root": "apps/genres",
      "entryFile": "main",
      "sourceRoot": "apps/genres/src",
      "compilerOptions": {
        "tsConfigPath": "apps/genres/tsconfig.app.json"
      }
    },
    "countries": {
      "type": "application",
      "root": "apps/countries",
      "entryFile": "main",
      "sourceRoot": "apps/countries/src",
      "compilerOptions": {
        "tsConfigPath": "apps/countries/tsconfig.app.json"
      }
    }
  }
}